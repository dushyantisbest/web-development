<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>chats</title>
    <style>
      table,
      th,
      td {
        border: 2px solid black;
        padding: 10px;
        margin: 5px;
      }
    </style>
  </head>
  <body>
    <h1>All chats</h1>
    <form action="/chats/new" method="get">
      <button>add new chat</button>
    </form>
    <table>
      <tr>
        <th>From</th>
        <th>To</th>
        <th>Content</th>
      </tr>
      <% chats.forEach(chat => { %>
      <tr>
        <td><%= chat.from %></td>
        <td><%= chat.to %></td>
        <td><%= chat.content %></td>
        <td>
          <form action="/chats/edit/<%= chat._id %>" method="get">
            <button type="submit">edit</button>
          </form>
          <form
            method="POST"
            action="/chats/delete/<%= chat._id %>?_method=DELETE"
          >
            <button type="submit">delete</button>
          </form>
        </td>
      </tr>
      <% }); %>
    </table>
  </body>
</html>
