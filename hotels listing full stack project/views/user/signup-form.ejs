<% layout("/layout/boilerplate.ejs") -%>

<form action="/user/signup" method="post" class="needs-validation" novalidate>
  <h1>Signup to Flatmate</h1>
  <div class="row">
    <label for="title" class="form-label">
      Username
      <input
        class="form-control"
        type="text"
        name="title"
        id=""
        placeholder=""
        required
      />
      <div class="invalid-feedback">please provide hotel name</div>
    </label>
    <label for="email" class="form-label">
      email
      <input class="form-control" type="email" name="image" id="" required />
    </label>

    <label for="password" class="form-label">
      password
      <input
        class="form-control"
        type="password"
        name="password"
        placeholder=""
        required
      />
      <div class="invalid-feedback">please provide password</div>
    </label>

    <button type="submit" class="btn mx-auto d-block form-submit-btn">
      submit
    </button>
  </div>
</form>
